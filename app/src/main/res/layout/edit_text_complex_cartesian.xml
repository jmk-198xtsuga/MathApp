<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    tools:showIn="@layout/complex_roots_fragment">

    <EditText
        android:id="@+id/inputReal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="real"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inputPlus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@id/inputReal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputReal"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputComplex"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:hint="complex"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintBaseline_toBaselineOf="@id/inputReal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputPlus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_i"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="i"
        app:layout_constraintBaseline_toBaselineOf="@id/inputReal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputComplex"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>